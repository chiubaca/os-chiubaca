---
export interface Props {
  appId: string;
  title: string;
  launchOnStart?: boolean;
}

const { appId, title, launchOnStart } = Astro.props;
---

<div
  id={`${appId}-container`}
  class={`${
    !launchOnStart && "hidden"
  } bg-white absolute w-60 h-60 resize overflow-auto border-2 border-black`}
>
  <div
    id={`${appId}-container-bar`}
    class="title-bar-dashed bg-blue-50 text-center p-1 cursor-grab active:cursor-grabbing"
  >
    <h2 class="bg-white inline px-1">{title}</h2>
  </div>
  <slot />
</div>

<style>
  .title-bar-dashed {
    background: linear-gradient(black 50%, transparent 0);
    background-clip: content-box;
    background-size: 6.6666666667% 13.3333333333%;
  }
</style>
