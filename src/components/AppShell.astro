---
export interface Props {
  index: number;
  appId: string;
  title: string;
}

const { index, appId, title } = Astro.props;

const App = await import(`../apps/${appId}/index.astro`).then((a) => a.default);
---

<div id={String(index)} data-app-id={appId}>
  <button
    id={`${appId}-icon`}
    class={`app-icon aspect-square w-10 bg-no-repeat bg-center bg-yellow-50`}
    style={`background-image: url('/src/apps/${appId}/icon.svg')`}
  >
  </button>
  <span>{title}</span>

  <div
    id={`${appId}-container`}
    class="hidden border bg-fuchsia-50 absolute w-60 h-60"
  >
    <div id={`${appId}-container-bar`} class="bg-blue-50 text-center p-1">
      {title}
    </div>
    <App />
  </div>
</div>
