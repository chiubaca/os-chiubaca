---
export interface Props {
  index: number;
  appId: string;
  title: string;
  appDir: string;
}

const { index, appId, title, appDir } = Astro.props;

const App = await import(`../apps/${appDir}/index.astro`).then(
  (a) => a.default
);
---

<div id={String(index)} data-app-id={appId}>
  <div id={appId} class="app-icon aspect-square w-10 bg-yellow-100"></div>
  <span>{title}</span>

  <div id={`${appId}-container`} class="hidden">
    <App />
  </div>
</div>
